{% extends 'packageBase.html.twig' %}

{% block component_header %}
    {% component PackageHeader with {
        package: 'twig-component',
        eyebrowText: 'Object-Oriented Templates'
    } %}
        {% block title_header %}
            PHP Classes that render:
            <span class="playfair ps-2">Twig Components</span>
        {% endblock %}

        {% block sub_content %}
            Create reusable, object-oriented templates. PHP class + template = Twig components.
        {% endblock %}
    {% endcomponent %}
{% endblock %}

{% block code_block_left %}
    <twig:CodeBlock filename="src/Twig/Alert.php" height="330px"/>
{% endblock %}

{% block code_block_right %}
    <twig:CodeBlock filename="templates/components/Alert.html.twig" height="330px"/>
{% endblock %}

{% block demo_title %}UX Twig Components{% endblock %}

{% block demo_content %}
    <div class="row align-items-center">
        <div class="col-8">
            {% block alert_success_example %}
                {{ component('Alert', {
                    message: 'I am a success alert!',
                }) }}
            {% endblock %}
        </div>
        <div class="col-4">
            <twig:CodeBlock
                filename="templates/ux_packages/twig-component.html.twig"
                :showFilename="false"
                targetTwigBlock="alert_success_example"
                :showTwigExtends="false"
                height="auto"
            />
        </div>
    </div>

    <div class="row my-2 align-items-center">
        <div class="col-8">
            {% block alert_danger_example %}
                {{ component('Alert', {
                    type: 'danger',
                    message: 'Oh no! The dinos escaped!',
                }) }}
            {% endblock %}
        </div>
        <div class="col-4">
            <twig:CodeBlock
                filename="templates/ux_packages/twig-component.html.twig"
                :showFilename="false"
                targetTwigBlock="alert_danger_example"
                :showTwigExtends="false"
                height="auto"
            />
        </div>
    </div>
{% endblock %}
